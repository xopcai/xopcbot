{
  "name": "@xopcai/xopcbot",
  "version": "0.1.0",
  "description": "Ultra-Lightweight Personal AI Assistant - Node.js + TypeScript",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "xopcbot": "./dist/cli/index.js"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc && pnpm --filter @xopcbot/web-ui run build",
    "dev": "tsx src/cli/index.ts",
    "start": "node dist/cli/index.js",
    "test": "vitest run src",
    "test:skills": "vitest run src/agent/skills/__tests__",
    "test:skills:regression": "./scripts/test-skills.sh",
    "test:skills:all": "pnpm test:skills && pnpm test:skills:regression",
    "skills:test": "tsx src/cli/index.ts skills test",
    "skills:validate": "tsx src/cli/index.ts skills test validate",
    "skills:security": "tsx src/cli/index.ts skills test security",
    "lint": "eslint 'src/**/*.ts' --ignore-pattern '**/examples/**'",
    "prepublishOnly": "npm run build && npm test && npm run test:skills:all",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "ai",
    "agent",
    "chatbot",
    "personal-assistant",
    "llm",
    "openai",
    "claude",
    "telegram",
    "whatsapp",
    "automation"
  ],
  "author": "Xu Micjoyce <micjoyce@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xopcai/xopcbot.git"
  },
  "bugs": {
    "url": "https://github.com/xopcai/xopcbot/issues"
  },
  "homepage": "https://github.com/xopcai/xopcbot#readme",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@grammyjs/runner": "^2.0.3",
    "@hono/node-server": "^1.19.9",
    "@inquirer/prompts": "^8.2.1",
    "@mariozechner/pi-agent-core": "^0.52.12",
    "@mariozechner/pi-ai": "^0.52.12",
    "@sinclair/typebox": "^0.34.48",
    "@whiskeysockets/baileys": "7.0.0-rc.9",
    "commander": "^14.0.3",
    "cron-parser": "^5.5.0",
    "dotenv": "^17.3.1",
    "glob": "^13.0.3",
    "grammy": "^1.40.0",
    "hono": "^4.11.9",
    "jiti": "^2.6.1",
    "node-cron": "^4.2.1",
    "pino": "^10.3.1",
    "uuid": "^13.0.0",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.18.1",
    "eslint": "^10.0.0",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.18",
    "vue": "^3.5.28"
  }
}
