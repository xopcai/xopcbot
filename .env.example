# xopcbot Configuration
# Copy this to .env and fill in your values

# LLM Provider Settings
# OpenRouter (recommended for best model selection)
OPENROUTER_API_KEY=sk-or-v1-xxx
OPENROUTER_API_BASE=https://openrouter.ai/api/v1

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-api-xxx

# OpenAI (GPT-4)
OPENAI_API_KEY=sk-xxx

# Google Gemini
GEMINI_API_KEY=xxx

# vLLM Local Model
VLLM_API_BASE=http://localhost:8000/v1
VLLM_API_KEY=dummy

# Default Model
DEFAULT_MODEL=anthropic/claude-opus-4-5

# Web Search (Brave)
BRAVE_SEARCH_API_KEY=BSA-xxx

# Telegram Bot Token
TELEGRAM_BOT_TOKEN=123456:ABC-xxx

# Allowed Telegram Users (user IDs or usernames)
TELEGRAM_ALLOW_FROM=["123456789", "username"]

# WhatsApp Settings
WHATSAPP_BRIDGE_URL=ws://localhost:3001
WHATSAPP_ALLOW_FROM=["+1234567890"]

# Server Settings
HOST=0.0.0.0
PORT=18790

# Workspace
WORKSPACE=~/.xopcbot/workspace
